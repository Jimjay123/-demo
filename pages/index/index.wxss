.top-bar {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  z-index: 999;
  padding: 20rpx 30rpx;
  display: flex;
}
.top-bar.active {
  background-color: #fff;
  border-bottom: 1px solid #eee;

}

.top-bar .scan image {
  width: 40rpx;
  height: 40rpx;
}

.top-bar .menu image {
  width: 40rpx;
  height: 40rpx;
}

.top-bar .search {
  position: relative;
  flex: 1;
  margin: 0 30rpx;
  border-radius: 240rpx;
  overflow: hidden;
}
.top-bar .search.active {
  border: 1px solid #ccc;
}

.top-bar .search .search-icon {
  position: absolute;
  left: 20rpx;
  bottom: 0;
}

.top-bar .search .search-icon image {
  width: 30rpx;
  height: 30rpx;
}

.top-bar .search input {
  padding: 2rpx 30rpx;
  padding-left: 60rpx;
  font-size: 24rpx;
  background-color: rgba(255, 255, 255, 0.5);
}

.place-holder {
  color: #e0e0e0;
}

/* 轮播图 */

swiper swiper-item image {
  width: 100%;
  height: 100%;
}

swiper swiper-item {
  height: 100%;
}

swiper {
  height: 350rpx;
}

/* nav部分 */

.nav {
  padding: 20rpx 0;
  overflow: hidden;
}

.nav .item {
  float: left;
  width: 20%;
  text-align: center;
  height: 150rpx;
}

.nav .item image {
  width: 95rpx;
  height: 95rpx;
  margin: 0 auto;
}

.nav .item view {
  padding-top: 10rpx;
  color: #aaa;
  font-size: 22rpx;
}

/* 秒杀部分样式 */

.sec-kill {
  padding: 20rpx;
}

.sec-kill .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sec-kill .top .pic image {
  width: 180rpx;
  height: 40rpx;
}

.sec-kill .top .more .arrow-right image {
  width: 22rpx;
  height: 22rpx;
}

.sec-kill .top .more {
  display: flex;
  align-items: center;
}

.sec-kill .top .more text {
  font-size: 22rpx;
  color: #aaa;
}

.sec-kill .main-content .scroll-item .pic image {
  width: 170rpx;
  height: 170rpx;

}

.sec-kill .main-content .scroll-item {
 padding: 20rpx;
 width: 170rpx;
display: inline-block;
}
.sec-kill .main-content scroll-view {
  white-space: nowrap
}
